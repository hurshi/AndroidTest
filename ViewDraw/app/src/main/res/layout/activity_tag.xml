<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical"
              tools:context=".MainActivity">
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
        <io.github.hurshi.viewdraw.tag.TagLayout
                android:layout_margin="50dp"
                android:background="#2333"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:padding="0dp"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:background="#f00"
                    android:text="w/w/10dp"/>

            <Button
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:background="#0f0"
                    android:text="80dp/w/T20dp"/>

            <Button
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="#00f"
                    android:padding="0dp"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:textColor="#fff"
                    android:text="90dp/w/L10dp"/>

            <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:background="#dd0"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:text="match_parent/20dp"/>

            <Button
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:background="#0ff"
                    android:padding="0dp"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:text="200dp/30dp"/>

            <Button
                    android:layout_width="wrap_content"
                    android:padding="0dp"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:layout_height="wrap_content"
                    android:background="#888"
                    android:text="w/wrap_content,hello world"/>

        </io.github.hurshi.viewdraw.tag.TagLayout>
    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
        <io.github.hurshi.viewdraw.tag.TagLayout2
                android:id="@+id/tagLayout"
                android:layout_margin="50dp"
                android:background="#2333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:padding="0dp"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:background="#f00"
                    android:text="w/w/10dp"/>

            <Button
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:background="#0f0"
                    android:text="80dp/w/T20dp"/>

            <Button
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="#00f"
                    android:padding="0dp"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:textColor="#fff"
                    android:text="90dp/w/L10dp"/>

            <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:background="#dd0"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:text="match_parent/20dp"/>

            <Button
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:background="#0ff"
                    android:padding="0dp"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:text="200dp/30dp"/>

            <Button
                    android:layout_width="wrap_content"
                    android:padding="0dp"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:layout_height="wrap_content"
                    android:background="#888"
                    android:text="w/wrap_content,hello world"/>

        </io.github.hurshi.viewdraw.tag.TagLayout2>
    </RelativeLayout>

</LinearLayout>