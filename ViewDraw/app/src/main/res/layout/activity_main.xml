<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                tools:context=".MainActivity">

    <io.github.hurshi.viewdraw.TagLayout
            android:id="@+id/tagLayout"
            android:layout_margin="50dp"
            android:padding="20dp"
            android:background="#2333"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#f00"
                android:text="w/w/10dp"/>

        <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:background="#0f0"
                android:text="80dp/w/T20dp"/>

        <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="#00f"
                android:textColor="#fff"
                android:text="90dp/w/L10dp"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="#dd0"
                android:text="match_parent/20dp"/>

        <TextView
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:background="#0ff"
                android:text="200dp/30dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:background="#888"
                android:text="wrap_content/20dp"/>

    </io.github.hurshi.viewdraw.TagLayout>
</RelativeLayout>